<!-- Yang diundang -->
<section class="section-1">
  <div class="container pl-0 pr-0 py-5">
    <div class="row">
      <div class="col-12 text-center">
        <h2 class="font-weight-light getinvitation-title" data-aos="fade-down" data-aos-duration="1500">Get Your E-Invitation</h2>
        <p data-aos="fade-down" data-aos-duration="1500" class="getinvitation-subtitle">Masukkan 6 digit kode undangan Anda</p>
        <div data-aos="fade-down", data-aos-duration="1500">
          <%= form_tag(root_path, method: :get) do%>
            <%= text_field_tag(:id, params[:id], style: "border: 1px solid #996515;") %>
            <%= submit_tag "RSVP", class: "btn btn-info btn-sm mb-1" %>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>